<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedTextInput" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>

<!--         Background and stroke colors-->
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxBackgroundColor">@color/tertiary</item>

        <item name="hintEnabled">false</item>


        <!-- Hint and text appearance -->
        <item name="android:textColorHint">@color/onTertiary</item>
        <item name="hintTextColor">@color/onTertiary</item>
        <item name="android:textColor">@color/onTertiary</item>

    </style>

    <!-- Style for the EditText inside -->
    <style name="RoundedTextInputEditText" parent="">
        <item name="android:textColor">@color/onTertiary</item>
        <item name="android:textColorHint">@color/primary</item>
    </style>

    <style name="HeaderText" parent="">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/league_spartan_medium</item>
        <item name="android:textStyle">bold</item>
    </style>
    

</resources>